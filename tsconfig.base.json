{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  // 아래 옵션을 켠 파일의 tsconfig 에는 composit: true 가 필요하다.
  "references": [
    {
      "path": "./packages/coreui"
    },
    {
      "path": "./packages/webapp"
    }
  ]
}
